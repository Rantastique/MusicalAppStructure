<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicalappstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Flow - Your Music App">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlaylistActivity"
            android:label="Playlists"
            android:parentActivityName="com.example.android.musicalappstructure.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ArtistListActivity"
            android:label="Artists"
            android:parentActivityName="com.example.android.musicalappstructure.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".AlbumListActivity"
            android:label="All Albums"
            android:parentActivityName="com.example.android.musicalappstructure.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".AlbumDetailsActivity"
            android:label="Songs on this Album"
            android:parentActivityName="com.example.android.musicalappstructure.AlbumListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AlbumListActivity" />
        </activity>
        <activity
            android:name=".PlaylistDetailsActivity"
            android:label="Songs in this Playlist"
            android:parentActivityName="com.example.android.musicalappstructure.PlaylistActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlaylistActivity" />
        </activity>
        <activity
            android:name=".ArtistDetailActivity"
            android:label="Songs by this Artist"
            android:parentActivityName="com.example.android.musicalappstructure.ArtistListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ArtistListActivity" />
        </activity>
        <activity
            android:name=".NowPlayingActivity"
            android:label="Now Playing"
            android:parentActivityName="com.example.android.musicalappstructure.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".BrowseActivity"
            android:label="Browse"
            android:parentActivityName="com.example.android.musicalappstructure.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".PaymentActivity"
            android:label="Get Flow Premium"
            android:parentActivityName="com.example.android.musicalappstructure.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>